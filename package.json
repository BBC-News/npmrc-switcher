{
  "name": "npmrc-switcher",
  "version": "0.0.1",
  "description": "Checks to see if a .npmrc exists in the directory and switches the user's npmrc to it if it does. If none is found, checks the next higher directory until it either finds an .npmrc file or hits the root folder",
  "main": "index.js",
  "scripts": {
    "test": "echo 'Error: no test specified' && exit 1",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "engines": {
    "node": ">=0.10"
  },
  "keywords": [
    "npmrc",
    "cli"
  ],
  "author": "BBC News",
  "license": "Apache-2",
  "repository": {
    "type": "git",
    "url": "git://github.com/BBC-News/npmrc-switcher.git"
  },
  "bugs": {
    "url": "https://github.com/BBC-News/npmrc-switcher/issues"
  },
  "homepage": "https://github.com/BBC-News/npmrc-switcher",
  "preferGlobal": "true",
  "dependencies": {
    "findup-sync": "0.1.x",
    "snyk": "^1.90.2"
  },
  "bin": {
    "npmrc-switcher": "lib/npmrc-switcher.js"
  },
  "devDependencies": {
    "grunt": "1.0.3",
    "jscs": "2.5.0",
    "grunt-jscs-checker": "0.5.x",
    "grunt-contrib-nodeunit": "2.0.0",
    "grunt-contrib-jshint": "0.11.1"
  },
  "snyk": true
}
